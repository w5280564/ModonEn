<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#232121">

        <Button
            android:id="@+id/sure_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="10dp"
            android:background="@null"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/success_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/sure_Btn"
            android:background="@drawable/success_icon"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/success_icon"
            android:layout_gravity="bottom"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingEnd="80dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="80dp" />


        <View
            android:id="@+id/botview"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/gan_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="完成"
            android:background="@drawable/gan_gradient"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/botview"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textStyle="bold"/>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
