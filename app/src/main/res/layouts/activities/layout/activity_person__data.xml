<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAllBg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include
        android:id="@+id/title_Include"
        layout="@layout/base_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/persondata_Lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorFristWhite"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/personData_Rel"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/head_Img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/persondata_head" />

            <TextView
                android:id="@+id/data_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/head_Img"
                android:text="头像"
                android:textColor="@color/colorSecondWhite"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/user_simple"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                fresco:roundAsCircle="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignLeft="@id/head_Img"
                android:layout_alignParentBottom="true"
                android:background="@color/colorline" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/nick_Rel"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/nick_Img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/persondata_nick" />

            <TextView
                android:id="@+id/nick_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/nick_Img"
                android:text="昵称"
                android:textColor="@color/colorSecondWhite"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/Nick_input"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/nick_Txt"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:lines="1"
                android:paddingRight="20dp"
                android:textColor="@color/colorSecondBlack"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignLeft="@id/nick_Img"
                android:layout_alignParentBottom="true"
                android:background="@color/colorline" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bir_Rel"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/bir_Img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/persondata_bir" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/bir_Img"
                android:text="生日"
                android:textColor="@color/colorSecondWhite"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bir_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text=""
                android:textColor="@color/colorSecondBlack"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignLeft="@id/bir_Img"
                android:layout_alignParentBottom="true"
                android:background="@color/colorline" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/sex_Rel"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/sex_Img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/persondata_sex" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/sex_Img"
                android:text="性别"
                android:textColor="@color/colorSecondWhite"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sex_man_Img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/man_selector" />

            <Button
                android:id="@+id/sex_woman_Img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/sex_man_Img"
                android:background="@drawable/woman_selector"
                android:layout_marginRight="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignLeft="@id/sex_Img"
                android:layout_alignParentBottom="true"
                android:background="@color/colorline" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/email_Rel"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/email_Img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/persondata_email" />

            <TextView
                android:id="@+id/moemail_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/email_Img"
                android:text="邮箱"
                android:textColor="@color/colorSecondWhite"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/email_input"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/moemail_Txt"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:lines="1"
                android:paddingRight="20dp"
                android:textColor="@color/colorSecondBlack"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignLeft="@id/email_Img"
                android:layout_alignParentBottom="true"
                android:background="@color/colorline" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/intr_Rel"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/intr_Img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/persondata_intr" />

            <TextView
                android:id="@+id/mointr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/intr_Img"
                android:text="简介"
                android:textColor="@color/colorSecondWhite"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/intr_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/intr_Img"
                android:text=""
                android:textColor="@color/colorSecondWhite"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/intr_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignLeft="@id/mointr"
                android:layout_alignParentRight="true"
                android:layout_below="@id/intr_Img"
                android:layout_centerVertical="true"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入你的签名"
                android:lines="1"
                android:paddingRight="20dp"
                android:textColor="@color/colorSecondBlack"
                android:textColorHint="@color/colorSecondBlack"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>
