<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="#fff3f3f3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/radio_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />


        <ImageView
            android:id="@+id/find_arrow_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_return" />


        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/find_arrow_img"
            android:layout_gravity="bottom"
            android:layout_marginTop="20dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingBottom="30dp"
            android:paddingEnd="60dp"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:paddingStart="60dp" />


        <TextView
            android:id="@+id/radio_Name_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewPager"
            android:layout_centerHorizontal="true"
            android:textColor="#313131"
            android:textSize="36sp" />

        <RelativeLayout
            android:animateLayoutChanges="true"
            android:id="@+id/radioplay_Rel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/radio_Name_Txt">

            <com.moying.energyring.waylenBaseView.MySeekBar
                android:id="@+id/radio_seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:maxHeight="2dp"
                android:progressDrawable="@drawable/seekbar_corlor"
                android:thumb="@drawable/seekbar_thumb"
                android:thumbOffset="0dp" />

            <TextView
                android:id="@+id/countName_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/radio_seekBar"
                android:layout_below="@id/radio_seekBar"
                android:layout_marginTop="5dp"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/Time_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/radio_seekBar"
                android:layout_below="@id/radio_seekBar"
                android:layout_marginTop="5dp"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/radio_list_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/radio_list_play" />

                <ImageView
                    android:id="@+id/radio_list_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@id/radio_list_play"
                    android:background="@drawable/radio_list_left" />

                <ImageView
                    android:id="@+id/radio_list_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@id/radio_list_left"
                    android:background="@drawable/radio_list_more" />


                <ImageView
                    android:id="@+id/radio_list_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/radio_list_play"
                    android:background="@drawable/radio_list_right" />

                <ImageView
                    android:id="@+id/radio_list_arr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/radio_list_right"
                    android:background="@drawable/radio_list_arr" />


            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:animateLayoutChanges="true"
            android:id="@+id/radioList_Rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="invisible">

            <TextView
                android:id="@+id/radio_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:text="电台列表"
                android:textColor="#99e4ef"
                android:textSize="14sp" />

            <HorizontalScrollView
                android:id="@+id/link_scro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/radio_Txt"
                android:layout_marginBottom="10dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/radioList_Lin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal" />
            </HorizontalScrollView>

            <TextView
                android:id="@+id/radio_cancel_Txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/link_scro"
                android:gravity="center"
                android:text="取消"
                android:textColor="#99e4ef"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_above="@id/radio_cancel_Txt"
                android:background="#99e4ef" />
        </RelativeLayout>


        <RelativeLayout
            android:animateLayoutChanges="true"
            android:id="@+id/colockdown_Rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="invisible">

            <LinearLayout
                android:id="@+id/clock_Lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:id="@+id/down_colockplay_Lin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/colockplay_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radio_list_colockplay"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        android:text="定時播放"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/down_colockpush_Lin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/colockpush_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/radio_list_colockpush" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="定時停止"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/down_cancel_Txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/clock_Lin"
                android:gravity="center"
                android:text="取消"
                android:textColor="#99e4ef"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_above="@id/down_cancel_Txt"
                android:background="#99e4ef" />

        </RelativeLayout>

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
