<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical">

    <include
        android:id="@+id/title_Include"
        layout="@layout/base_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:id="@+id/select_Rel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:layout_below="@id/title_Include"
        android:visibility="gone">

        <TextView
            android:id="@+id/mu_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="今日目标"
            android:textColor="#95a0ab"
            android:textSize="14sp"
            android:textStyle="bold" />


        <com.moying.energyring.waylenBaseView.HorizontalselectedView
            android:id="@+id/horView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mu_Txt"
            android:layout_centerInParent="true"
            app:HorizontalselectedViewSelectedTextColor="#2b2a2a"
            app:HorizontalselectedViewSelectedTextSize="60" />

        <View
            android:id="@+id/select_Line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#eaeaea"
            android:layout_alignLeft="@id/mu_Txt"/>

        <ImageView
            android:id="@+id/set_select_Img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/select_Line"
            android:layout_centerHorizontal="true"
            android:src="@drawable/set_select_icon" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/wheel_Lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_Rel">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日组数"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#2b2a2a"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">
                <com.moying.energyring.waylenBaseView.wheel.views.WheelView
                    android:id="@+id/wv_group"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#2b2a2a"
                    android:text="组"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每组数量"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#2b2a2a"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">
                <com.moying.energyring.waylenBaseView.wheel.views.WheelView
                    android:id="@+id/wv_count"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#2b2a2a"
                    android:text="个"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>





    <RelativeLayout
        android:id="@+id/coach_Rel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:layout_below="@id/wheel_Lin">


        <TextView
            android:id="@+id/coach_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="专属教练"
            android:textColor="#95a0ab"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/coach_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/set_right_arrow" />

        <TextView
            android:id="@+id/coach_selectName_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/coach_arrow"
            android:text="海哥"
            android:textColor="#2b2a2a"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignLeft="@id/personset_Img"
            android:layout_alignParentBottom="true"
            android:background="#eaeaea" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/bgmusic_Rel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:layout_below="@id/coach_Rel">


        <TextView
            android:id="@+id/bgmusic_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="背景音乐"
            android:textColor="#95a0ab"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/bgmusic_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/set_right_arrow" />

        <TextView
            android:id="@+id/bgmusic_selectName_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/bgmusic_arrow"
            android:text="激烈"
            android:textColor="#2b2a2a"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>


    <TextView
        android:id="@+id/next_Txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffd800"
        android:text="下一步"
        android:gravity="center"/>


</RelativeLayout>
