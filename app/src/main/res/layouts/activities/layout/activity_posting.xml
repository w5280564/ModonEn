<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:orientation="vertical"
    android:focusableInTouchMode="true">


    <include
        android:id="@+id/title_Include"
        layout="@layout/base_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/edit_Rel"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:background="@drawable/popupwhite_bg">

        <EditText
            android:id="@+id/content_Edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@null"
            android:textColor="#000000"
            android:textColorHint="#b9b9b9"
            android:textSize="16sp"
            android:layout_above="@id/photoLayout"
            android:layout_alignParentTop="true"
            android:gravity="left"/>

        <RelativeLayout
            android:id="@+id/remindRel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/remindTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="\@提醒谁看"
                android:textColor="#000000"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/arrow_img"
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/right_arrow"/>

            <LinearLayout
                android:id="@+id/choice_Lin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/arrow_img"
                android:layout_toRightOf="@id/remindTxt"
                android:gravity="right|center_vertical"
                android:orientation="horizontal" />

        </RelativeLayout>



        <com.moying.energyring.waylenBaseView.FlowLayout
            android:id="@+id/photoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mu_Btn"
            android:layout_above="@id/remindRel">

            <ImageButton
                android:id="@+id/add_photo_Img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/add_photo"
                android:scaleType="centerInside" />
        </com.moying.energyring.waylenBaseView.FlowLayout>

        <LinearLayout
            android:id="@+id/hero_Lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/photoLayout"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/energy_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/energy_icon" />

            <TextView
                android:id="@+id/hero_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="摩英英雄榜"
                android:textColor="#f3fb23"
                android:textSize="12sp" />
        </LinearLayout>



    </RelativeLayout>

    <LinearLayout
        android:id="@+id/share_Lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/energy_Rel"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="同步分享到"
            android:textColor="#545454"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/share_friend"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/share_friend_icon" />

        <ImageView
            android:id="@+id/share_mom"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/share_wechat_icon" />

        <ImageView
            android:id="@+id/share_sina"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/share_sina_icon" />

        <ImageView
            android:id="@+id/share_qq"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/share_qq_icon" />

        <ImageView
            android:id="@+id/share_qzone"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/share_qzone_icon" />
    </LinearLayout>


</LinearLayout>
