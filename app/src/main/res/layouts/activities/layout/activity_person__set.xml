<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAllBg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include
        android:id="@+id/title_Include"
        layout="@layout/base_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:background="@color/colorFristWhite"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/personData_Rel"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/personset_Img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/personset_icon"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/data_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/personset_Img"
                android:layout_marginLeft="15dp"
                android:text="个人资料"
                android:textColor="@color/colorSecondWhite"
                android:textStyle="bold"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/data_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/set_right_arrow" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignLeft="@id/personset_Img"
                android:layout_alignParentBottom="true"
                android:background="@color/colorline" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/change_Rel"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/phone_Img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/personset_phone_icon"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/change_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/phone_Img"
                android:layout_marginLeft="15dp"
                android:text="更换手机号"
                android:textColor="@color/colorSecondWhite"
                android:textStyle="bold"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/change_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/set_right_arrow"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignLeft="@id/phone_Img"
                android:layout_alignParentBottom="true"
                android:background="@color/colorline" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/idea_Rel"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/ideal_Img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/personset_ideal_icon"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/fan_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/ideal_Img"
                android:layout_marginLeft="15dp"
                android:text="意见反馈"
                android:textColor="@color/colorSecondWhite"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/idea_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/set_right_arrow" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignLeft="@id/ideal_Img"
                android:layout_alignParentBottom="true"
                android:background="@color/colorline" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cache_Rel"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/cache_Img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/personset_cache_icon"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/qing_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/cache_Img"
                android:text="清理缓存"
                android:textColor="@color/colorSecondWhite"
                android:textSize="14sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/cache_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/set_right_arrow" />



            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignLeft="@id/cache_Img"
                android:layout_alignParentBottom="true"
                android:background="@color/colorline" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/push_Rel"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/mes_Img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/personset_mes_icon"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/mes_Img"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:text="消息推送"
                android:textColor="@color/colorSecondWhite"
                android:textSize="14sp" />


            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/push_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                app:kswBackDrawable="@drawable/sb_back_drawable"
                app:kswThumbDrawable="@drawable/sb_thumb_drawable"
                app:kswThumbHeight="20dp"
                app:kswThumbWidth="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignLeft="@id/mes_Img"
                android:layout_alignParentBottom="true"
                android:background="@color/colorline" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/about_Rel"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/about_Img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/personset_about_icon"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/neng_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/about_Img"
                android:text="关于能量圈"
                android:textColor="@color/colorSecondWhite"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/about_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/set_right_arrow" />

        </RelativeLayout>

        <Button
            android:id="@+id/quit_Btn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/timechioce_next"
            android:text="退出登录"
            android:textColor="#f14d4c"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>



</LinearLayout>
