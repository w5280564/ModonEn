<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:background="#232121">

    <include
        android:id="@+id/title_Include"
        layout="@layout/base_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/start_Lin"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:background="#2b2a2a"
        android:layout_below="@+id/title_Include"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始日期"
            android:textColor="#95a0ab"
            android:textSize="15sp" />

        <View
            android:layout_width="1px"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="50dp"
            android:visibility="invisible"
            android:background="#343434" />

        <TextView
            android:id="@+id/start_Txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="2017-04-06"
            android:textColor="#989797"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignBottom="@id/start_Lin"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#343434" />

    <LinearLayout
        android:id="@+id/end_Lin"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@id/start_Lin"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:background="#2b2a2a">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束日期"
            android:textColor="#95a0ab"
            android:textSize="15sp" />

        <View
            android:layout_width="1px"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="50dp"
            android:background="#343434"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/end_Txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="2017-04-06"
            android:textColor="#989797"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignBottom="@id/end_Lin"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#343434" />

    <RelativeLayout
        android:id="@+id/goal_Rel"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@id/end_Lin"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:background="#2b2a2a">

        <TextView
            android:id="@+id/goal_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="每日目标"
            android:textColor="#95a0ab"
            android:textSize="15sp" />

        <View
            android:id="@+id/goal_line"
            android:layout_width="1px"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="50dp"
            android:layout_toRightOf="@id/goal_Txt"
            android:background="#343434"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/unit_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:textColor="#ffffff"
            android:text="单位"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/count_Edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/unit_Txt"
            android:layout_toRightOf="@id/goal_line"
            android:background="@null"
            android:gravity="center_vertical"
            android:phoneNumber="true"
            android:lines="1"
            android:textColor="#989797"
            android:textSize="14sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/mu_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/timechioce_next"
        android:text="下一步"
        android:textColor="#f24d4d"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
