<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAllBg">

    <include
        android:id="@+id/title_Include"
        layout="@layout/base_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:id="@+id/ac_Rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_Include"
        android:background="@color/colorFristWhite">

        <android.support.design.widget.TabLayout
            android:id="@+id/ac_tab_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tabPaddingEnd="-0.1dp"
            app:tabPaddingStart="-0.1dp" />

        <TextView
            android:id="@+id/fen_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ac_tab_layout"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/ac_tab_layout"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:textColor="@color/colorFristRed"
            android:textSize="30sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/Slideviewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ac_Rel" />


</RelativeLayout>
