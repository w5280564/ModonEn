<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/fen_Rel"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/popupwhite_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/suss_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="设置成功！\n您获得了以下奖励："
            android:textColor="#3c3a55"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/suss_Txt"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="50积分"
            android:textColor="#3c3a55"
            android:textSize="16sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/sure_Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/popupwhite_bg"
            android:text="确定"
            android:textColor="#ffa52b"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_above="@id/sure_Btn"
            android:background="#cccccc" />
    </RelativeLayout>

</LinearLayout>




