<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAllBg"
    android:orientation="vertical">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/mAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="0dp">



        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/colorFristWhite"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">


            <RelativeLayout
                android:id="@+id/my_Rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="parallax">


                <RelativeLayout
                    android:id="@+id/top_Rel"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/popupwhite_bg">

                    <TextView
                        android:id="@+id/zan_Txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="获赞"
                        android:textColor="@color/colorFristBlack"
                        android:textSize="14sp" />



                    <TextView
                        android:id="@+id/rankCount_Txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/zan_Txt"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="50dp"
                        android:text=""
                        android:textColor="@color/colorFristBlack"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/raid_Txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="积分攻略>>"
                        android:textSize="11sp"
                        android:textColor="@color/colorSecondWhite"
                        android:layout_below="@id/rankCount_Txt"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="50dp"/>


                </RelativeLayout>

                <TextView
                    android:id="@+id/below_Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_below="@id/top_Rel"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ban_round"
                    android:gravity="center"
                    android:text="排行榜"
                    android:textColor="@color/colorFristRed"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/my_tab_Lin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/top_Rel"
                    android:background="@drawable/ban_round"
                    android:gravity="center"
                    android:orientation="vertical">

                    <android.support.design.widget.TabLayout
                        android:id="@+id/ac_tab_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:tabPaddingEnd="-0.1dp"
                        app:tabPaddingStart="-0.1dp"
                        android:background="@drawable/timechioce_next"/>


                </LinearLayout>



                <ImageView
                    android:id="@+id/round_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/top_Rel"
                    android:layout_below="@+id/top_Rel"
                    android:src="@drawable/round_line" />

                <ImageView
                    android:id="@+id/round_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/top_Rel"
                    android:layout_below="@+id/top_Rel"
                    android:src="@drawable/round_line" />
            </RelativeLayout>


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin"
                android:background="@color/colorFristWhite">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/return_Btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/return_black" />

                    <TextView
                        android:id="@+id/title_Txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="积分排行"
                        android:textColor="@color/colorFristBlack"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <android.support.design.widget.TabLayout
                        android:id="@+id/toolbar_tab_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        app:tabPaddingEnd="-0.1dp"
                        app:tabPaddingStart="-0.1dp"
                        android:background="@drawable/timechioce_next"/>

                    <TextView
                        android:id="@+id/rete_Txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/person_guigazy_icon" />

                </RelativeLayout>

            </android.support.v7.widget.Toolbar>


        </android.support.design.widget.CollapsingToolbarLayout>



    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/pk_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/colorFristWhite"
            android:text="您战胜了对手"
            android:textColor="@color/colorSecondWhite"
            android:textSize="10sp"
            android:lines="1"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/Slideviewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/myData_Rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorFristWhite">

        <TextView
            android:id="@+id/rank_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorFristBlack"
            android:textSize="14sp"
            android:text="我"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/head_simple"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="10dp"
            app:roundAsCircle="true" />


        <TextView
            android:id="@+id/all_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:textColor="@color/colorFristRed"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/name_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/head_simple"
            android:lines="1"
            android:textColor="@color/colorFristBlack"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/my_change_Img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/change_down"
            android:layout_toRightOf="@id/name_Txt"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/my_change_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/my_change_Img"
            android:layout_centerVertical="true"
            android:textColor="#ff0000"
            android:textSize="12sp"
            android:textStyle="bold" />


    </RelativeLayout>




</android.support.design.widget.CoordinatorLayout>
