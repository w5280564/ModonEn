<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAllBg"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/badge_Rel"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/person_badge_bg">

        <Button
            android:id="@+id/return_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/return_black" />

        <TextView
            android:id="@+id/my_badge_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的徽章"
            android:textColor="@color/colorFristWhite"
            android:textSize="28sp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/badge_Lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/person_badge_xingbg"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/badge_xingImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/person_badge_xing" />

            <TextView
                android:id="@+id/my_badgeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorFristWhite"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>


        <android.support.design.widget.TabLayout
            android:id="@+id/ac_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/badgeviewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/badge_Rel" />


</RelativeLayout>
