<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232121">

    <RelativeLayout
        android:id="@+id/title_Rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2b2a2a">

        <ImageView
            android:id="@+id/return_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/return_black" />

        <ImageView
            android:id="@+id/right_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/daypk_delete_icon"/>

        <TextView
            android:id="@+id/cententtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:lines="1"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>


    <android.support.design.widget.TabLayout
        android:id="@+id/ac_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:tabPaddingEnd="-0.1dp"
        app:tabPaddingStart="-0.1dp"
        android:background="#00000000"/>


    <android.support.v4.view.ViewPager
        android:id="@+id/Slideviewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_Rel"
        android:layout_above="@id/ac_tab_layout"/>


</RelativeLayout>
