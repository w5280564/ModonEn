<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:focusableInTouchMode="true">


    <RelativeLayout
        android:id="@+id/seek_Rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/cancel_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="取消"
            android:textColor="#4d4d4d"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/seek_Edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/find_gazy"
            android:gravity="center"
            android:hint="搜索 用户/成长日志"
            android:lines="1"
            android:textColorHint="#5b5b5b"
            android:textSize="10sp" />

    </RelativeLayout>

    <com.moying.energyring.xrecycle.XRecyclerView
        android:id="@+id/find_recy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/seek_Rel"
        android:overScrollMode="never" />


</RelativeLayout>
