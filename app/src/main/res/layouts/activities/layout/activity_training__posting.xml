<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical">

    <Button
        android:id="@+id/back_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/huizong_cha"/>


    <LinearLayout
        android:id="@+id/top_Lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/train_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/train_success" />

        <TextView
            android:id="@+id/train_successTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/train_success"
            android:layout_centerHorizontal="true"
            android:text="恭喜完成训练"
            android:textColor="#fe9a00" />


        <RelativeLayout
            android:id="@+id/train_nameRel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/train_successTxt">

            <TextView
                android:id="@+id/train_NameTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:text="深蹲"
                android:textColor="#95a0ab"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/train_CountTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:text="深蹲"
                android:textColor="#4d4a4a"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#1a2b2a2a" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/train_timeRel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/train_nameRel">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:text="时长"
                android:textColor="#95a0ab"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/train_timeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:text="深蹲"
                android:textColor="#4d4a4a"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#1a2b2a2a" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/train_zuRel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/train_timeRel">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:text="动作"
                android:textColor="#95a0ab"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/train_zuTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:text="深蹲"
                android:textColor="#4d4a4a"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#1a2b2a2a" />

        </RelativeLayout>

    </LinearLayout>


    <Button
        android:id="@+id/post_Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffd800"
        android:text="去发布"
        android:textColor="#4d4a4a"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/post_Btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="训练那么辛苦，\n发个能量帖说说现在的心情吧"
        android:textColor="#95a0ab" />

</RelativeLayout>
