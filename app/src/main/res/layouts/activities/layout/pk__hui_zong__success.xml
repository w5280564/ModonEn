<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAllBg">

    <ImageView
        android:id="@+id/success_Img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/huizong_succ_icon"/>

    <ImageView
        android:id="@+id/cha_Img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cha_icon"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        />

    <LinearLayout
        android:id="@+id/share_Lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/share_friend_Lin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/share_friend_Img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/share_friend_select" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="朋友圈"
                android:textColor="@color/colorFristBlack"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_wechat_Lin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/share_wechat_Img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/share_wechat_select" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信好友"
                android:textColor="@color/colorFristBlack"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_sina_Lin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/share_sina_Img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/share_sina_select" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微博"
                android:textColor="@color/colorFristBlack"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_qq_Lin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/share_qq_Img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/share_qq_select" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ"
                android:textColor="@color/colorFristBlack"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_qzone_Lin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/share_qzone_Img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/share_qzone_select" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ空间"
                android:textColor="@color/colorFristBlack"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
