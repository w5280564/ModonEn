<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical"
    android:gravity="center_horizontal">


    <include
        android:id="@+id/title_Include"
        layout="@layout/base_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/bang_Txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="绑定手机号，提升你的账号安全。手机号也可用来登录"
        android:textColor="#262626"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/phone_Rel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/title_Include"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/login_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/login_nextphone" />

        <EditText
            android:id="@+id/phone_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/login_phone"
            android:background="@null"
            android:hint="手机号："
            android:inputType="phone"
            android:lines="1"
            android:textColor="#2b2a2a"
            android:textColorHint="#95a0ab"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/lineone"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="#e3e7eb" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/code_Rel"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/phonerel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/code_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:text="获取验证码"
            android:textColor="#ffa327"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/llz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/code_Btn"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/login_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/login_nextcode" />


            <EditText
                android:id="@+id/codeedit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/login_phone"
                android:background="@null"
                android:hint="验证码"
                android:inputType="phone"
                android:lines="1"
                android:textColor="#2b2a2a"
                android:textColorHint="#95a0ab"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="#e3e7eb" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wu_Rel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/title_Include"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:visibility="invisible">


        <ImageView
            android:id="@+id/login_wu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/login_nextwu" />

        <EditText
            android:id="@+id/wu_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/login_wu"
            android:background="@null"
            android:hint="能量源（选填）"
            android:inputType="phone"
            android:lines="1"
            android:textColor="#2b2a2a"
            android:textColorHint="#95a0ab"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/linethree"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="#e3e7eb" />
    </RelativeLayout>

    <Button
        android:id="@+id/loginFinsh_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/daypk_train_bg"
        android:text="提交"
        android:textColor="#2b2a2a"
        android:textSize="18sp"
        android:textStyle="bold" />




</LinearLayout>
