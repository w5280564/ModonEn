<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_person__play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3">

    <include
        android:id="@+id/title_Include"
        layout="@layout/base_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/stop_Rel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/title_Include"
        android:layout_marginTop="30dp"
        android:background="#ffffff"
        android:paddingLeft="30dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/stop_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="功能开启"
            android:textColor="#000000"
            android:textSize="18sp" />

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/video_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            app:kswBackDrawable="@drawable/sb_back_drawable"
            app:kswThumbDrawable="@drawable/sb_thumb_drawable"
            app:kswThumbHeight="20dp"
            app:kswThumbWidth="20dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/play_Rel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/stop_Rel"
        android:layout_marginTop="30dp"
        android:background="#ffffff"
        android:paddingLeft="30dp"
        android:paddingRight="20dp">


            <TextView
                android:id="@+id/play_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="时间"
                android:textColor="#000000"
                android:textSize="18sp" />


        <ImageView
            android:id="@+id/play_Img"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow" />

        <TextView
            android:id="@+id/clock_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/play_Img"
            android:gravity="right"
            android:text=""
            android:textColor="#000000"
            android:textSize="10sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/video_Rel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/play_Rel"
        android:layout_marginTop="30dp"
        android:background="#ffffff"
        android:paddingLeft="30dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="电台"
            android:textColor="#000000"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/arrow_right"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow" />

        <TextView
            android:id="@+id/videoTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/arrow_right"
            android:text=""
            android:textColor="#000000" />
    </RelativeLayout>


</RelativeLayout>
