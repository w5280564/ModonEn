<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/mu_Rel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/newpk_relbg"
        android:layout_marginTop="10dp">


        <TextView
            android:id="@+id/today_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/today_shap"
            android:textSize="14sp"
            android:gravity="center"/>


        <com.moying.energyring.waylenBaseView.AutoScaleTextView
            android:id="@+id/project_Txt"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/today_Txt"
            android:text=""
            android:textColor="#262626"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@id/time_Lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/project_Txt"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/count_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text=""
                android:textColor="#262626"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/unit_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text=""
                android:textColor="#262626"
                android:textSize="7sp"
                android:textStyle="bold" />

        </LinearLayout>


        <com.moying.energyring.waylenBaseView.AutoScaleTextView
            android:id="@+id/all_Txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#ffd91e"
            android:gravity="center"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/project_Simple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/all_Txt"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

</LinearLayout>