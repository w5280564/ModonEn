<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/myRel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorFristWhite"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/taskName_Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布"
                    android:textColor="@color/colorFristBlack"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fen_Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorFristRed"
                    android:textSize="10sp"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>


            <TextView
                android:id="@+id/taskContent_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布"
                android:textColor="@color/colorSecondWhite"
                android:textSize="10sp" />

        </LinearLayout>

        <!--<TextView-->
        <!--android:id="@+id/taskContent_Txt"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="发布"-->
        <!--android:textColor="#95a0ab"-->
        <!--android:textSize="10sp" />-->


        <Button
            android:id="@+id/task_Btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/daypk_train_bg"
            android:text="兑换"
            android:textColor="@color/colorFristWhite"
            android:textSize="12sp"
            android:textStyle="bold" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:alpha="0.05"
            android:background="@color/colorline" />


    </RelativeLayout>


</LinearLayout>