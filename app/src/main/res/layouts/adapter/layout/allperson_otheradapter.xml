<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/mu_Rel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/popupwhite_bg">

        <TextView
            android:id="@+id/title_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:text="健康走"
            android:textColor="@color/colorFristRed"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/time_Lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_Txt"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="目标时长"
                    android:textColor="@color/colorSecondWhite"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/day_Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5天"
                    android:textColor="@color/colorFristBlack"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="每日目标"
                    android:textColor="@color/colorSecondWhite"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/count_Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5天"
                    android:textColor="@color/colorFristBlack"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/start_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/time_Lin"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorSecondWhite"
            android:text="完成" />

        <TextView
            android:id="@+id/finsh_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/time_Lin"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorFristBlack"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/finsh_Txt"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/time_Lin"
            android:textColor="@color/colorSecondWhite"
            android:text="完成"/>

        <ProgressBar
            android:id="@+id/mypross"
            style="?android:progressBarStyleHorizontal"
            android:layout_below="@id/start_Txt"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_centerVertical="true"
            android:progressDrawable="@drawable/myprogress"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</LinearLayout>