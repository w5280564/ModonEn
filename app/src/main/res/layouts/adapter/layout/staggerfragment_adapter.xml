<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/mu_Rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorFristWhite">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/content_simple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:id="@+id/content_Rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/content_simple"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/stagger_bot_Img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/stagger_bot_icon"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/content_Txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/stagger_bot_Img"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:lines="2"
                android:textColor="@color/colorFristBlack"
                android:textSize="14sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/content_Rel"
            android:layout_marginBottom="10dp">


            <LinearLayout
                android:id="@+id/like_Lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/energy_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/energy_like" />

                <TextView
                    android:id="@+id/like_Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/colorFourthBlack"
                    android:textSize="12sp" />
            </LinearLayout>


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/myhead_simple"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                fresco:roundAsCircle="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/name_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorFourthBlack"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                android:lines="1"
                android:layout_toRightOf="@id/myhead_simple"
                android:layout_toLeftOf="@id/like_Lin"
                android:ellipsize="end"/>


        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>