<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/my_Rel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="#2b2a2a">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/my_Head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:roundAsCircle="true" />


        <LinearLayout
            android:id="@+id/content_Lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/my_Head"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/content_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text=""
                android:textColor="#989797"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/time_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#4d4a4a"
                android:textSize="8sp" />
        </LinearLayout>


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/content_simple"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/isfocus_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textColor="#4d4a4a"
            android:lines="3"
            android:gravity="center"
            android:textSize="10sp" />


        <ImageView
            android:id="@+id/line_img"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignLeft="@id/content_Lin"
            android:layout_alignParentBottom="true"
            android:background="#343434" />
    </RelativeLayout>


</RelativeLayout>