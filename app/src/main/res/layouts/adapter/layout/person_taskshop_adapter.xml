<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/shop_Rel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:background="@color/colorFristWhite">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/content_simple"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/name_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/content_simple"
            android:layout_marginLeft="10dp"
            android:lines="1"
            android:textColor="@color/colorFristBlack"
            android:textSize="12sp"
            android:textStyle="bold"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_Txt"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fen_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:lines="1"
                android:textColor="@color/colorFristRed"
                android:textSize="16sp" />


            <Button
                android:id="@+id/exchange_Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/daypk_train_bg"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorFristBlack"
                android:textStyle="bold"
                android:text="兑换"
                android:textSize="12sp"
                android:layout_marginRight="5dp"
                style="?android:attr/borderlessButtonStyle"/>


        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>