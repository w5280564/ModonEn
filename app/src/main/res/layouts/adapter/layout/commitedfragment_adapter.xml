<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/mu_Rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/popupwhite_bg">

        <LinearLayout
            android:id="@+id/title_Lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="horizontal">


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/myhead_simple"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                app:roundAsCircle="true" />

            <TextView
                android:id="@+id/name_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/time_Txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:paddingRight="15dp"
                android:textColor="#6b6b6b"
                android:textSize="12sp" />

        </LinearLayout>


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/content_simple"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/title_Lin"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_Lin"
            android:layout_toRightOf="@id/content_simple"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/content_Txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:lines="3"
                android:textColor="#676767"
                android:textSize="12sp" />


            <LinearLayout
                android:id="@+id/talk_Lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="right|bottom"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/energy_talk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/energy_talk" />

                <TextView
                    android:id="@+id/talk_Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="#aeaeae"
                    android:textSize="9sp" />

                <ImageView
                    android:id="@+id/energy_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/energy_like" />

                <TextView
                    android:id="@+id/like_Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="#aeaeae"
                    android:textSize="9sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_above="@id/talk_Lin"
                android:background="@drawable/dash_line"
                android:layerType="software" />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>