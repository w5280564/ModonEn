<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/mu_Rel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/popupblacktwo_bg">


        <LinearLayout
            android:id="@+id/my_Lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/my_simpleview"
                android:layout_width="50dp"
                android:layout_height="50dp"
                fresco:roundAsCircle="true" />

            <TextView
                android:id="@+id/name_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f24d4c"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/time_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/my_Lin"
            android:text=""
            android:textColor="#989797"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/all_myTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/time_Txt"
            android:layout_centerVertical="true"
            android:text="目标时长"
            android:textColor="#989797"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/all_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/all_myTxt"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/oneday_myTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/time_Txt"
            android:layout_below="@id/all_myTxt"
            android:layout_centerVertical="true"
            android:text="每日目标"
            android:textColor="#989797"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/oneday_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/all_myTxt"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/oneday_myTxt"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/show_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp" />

    </RelativeLayout>


</LinearLayout>