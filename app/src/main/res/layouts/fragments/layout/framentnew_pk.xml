<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/titlebg_Rel"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#232121">
        <!--android:background="@drawable/fragmentpk_titlebg_gradient"-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日排名"
                android:textColor="#ffffea"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rank_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="首页"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/my_Lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_white_black"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/check_Lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pk_check_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/pk_check_img" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="签到"
                    android:textColor="#ff7c79"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <com.sunfusheng.marqueeview.MarqueeView
                android:id="@+id/MarqueeView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:mvTextColor="#ff7c79"
                app:mvTextSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/hui_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/round_white_black"
            android:gravity="center"
            android:text="一键汇总"
            android:textColor="#ff7c79"
            android:textSize="14sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/pk_more_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/newpk_more"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <android.support.design.widget.TabLayout
                android:id="@+id/pk_tab_layout"
                android:layout_width="200dp"
                android:layout_height="50dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/tag_scro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/papercontent"
            android:scrollbars="none"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/taglin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal" />
        </HorizontalScrollView>


    </RelativeLayout>


    <com.moying.energyring.xrecycle.XRecyclerView
        android:id="@+id/pk_recy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titlebg_Rel" />

    <ImageView
        android:id="@+id/pk_ce_Img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/pk_ce_icon" />


</RelativeLayout>