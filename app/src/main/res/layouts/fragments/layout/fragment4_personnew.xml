                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/personnew_idea_icon"
                    android:background="#343434" />
            </RelativeLayout>



