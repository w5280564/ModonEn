                android:layout_height="wrap_content"
                android:layout_alignRight="@id/personnew_nom_icon"
                android:layout_alignBottom="@id/personnew_nom_icon"
                android:background="@drawable/calendar_item_red"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="9sp"
                android:visibility="invisible" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/usericon_Rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/user_simple"
