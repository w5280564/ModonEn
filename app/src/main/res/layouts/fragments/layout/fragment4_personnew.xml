                    android:textColor="#e3e7eb"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/hui_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/right_arrow_black" />

                <TextView
                    android:id="@+id/idearend_Txt"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/calendar_item_red"
                    android:layout_toLeftOf="@id/hui_arrow"
                    android:layout_centerVertical="true"
                    android:visibility="invisible" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/person_hui_icon"
                    android:background="#343434"
                    android:visibility="gone" />


            </RelativeLayout>


