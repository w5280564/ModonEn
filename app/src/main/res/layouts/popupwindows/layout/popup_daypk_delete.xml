<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_black"
    android:gravity="center">


    <RelativeLayout
        android:id="@+id/my_Rel"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:background="@drawable/popupwhite_bg">

        <TextView
            android:id="@+id/hint_Txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="提示"
            android:textColor="#262626"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/hint_Txt"
            android:background="#343434" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:text="确定删除该项目吗？删除项目不会影响您的历史成绩，删除后可在pk汇报中重新添加。"
            android:textColor="#262626"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/cha_Lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sure_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#e3e7eb"
                android:gravity="center"
                android:text="确定"
                android:textColor="#95a0ab"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/cancel_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#e05954"
                android:gravity="center"
                android:text="取消"
                android:textColor="#ffffff"
                android:textSize="14sp" />


        </LinearLayout>


    </RelativeLayout>


</LinearLayout>