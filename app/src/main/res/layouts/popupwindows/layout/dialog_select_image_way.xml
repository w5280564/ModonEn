<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:orientation="vertical">

    <Button
        android:id="@+id/image_pick_by_camera"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/common_button_color_selector"
        android:gravity="center"
        android:text="拍照"
        android:textColor="#3B3B3A"
        android:textSize="22sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#CECED8" />

    <Button
        android:id="@+id/image_pick_by_choose"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/common_button_color_selector"
        android:gravity="center"
        android:onClick="onClick"
        android:text="从相册选择"
        android:textColor="#3B3B3A"
        android:textSize="22sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/image_pick_cancel"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/common_button_color_selector"
        android:gravity="center"
        android:onClick="onClick"
        android:text="取消"
        android:textColor="#3B3B3A"
        android:textSize="22sp" />
</LinearLayout>