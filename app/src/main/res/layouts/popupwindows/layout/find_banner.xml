<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/papercontent"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/bannerdot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/viewpager"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" />
    </RelativeLayout>


    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_below="@id/papercontent"-->
    <!--android:orientation="vertical">-->

    <HorizontalScrollView
        android:id="@+id/link_scro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/papercontent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/bannerlin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" />
    </HorizontalScrollView>
    <!--</LinearLayout>-->

    <RelativeLayout
        android:id="@+id/radio_Rel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/link_scro"
        android:layout_centerHorizontal="true"
        android:background="@drawable/popupblack_bg">

        <LinearLayout
            android:id="@+id/enl_Lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:id="@+id/radio_line_View"
                android:layout_width="2dp"
                android:layout_height="12dp"
                android:layout_marginRight="5dp"
                android:background="#F3DB23" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="英文电台"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/enl_Lin"
            android:layout_marginLeft="10dp">

            <RelativeLayout
                android:id="@+id/play_Rel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/radio_simple"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    fresco:roundedCornerRadius="10dp" />

                <ImageView
                    android:id="@+id/radio_play_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/radio_play" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/radiomore_Lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/radio_moreimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_more" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多"
                    android:textColor="#e3e7eb"
                    android:textSize="8sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/timeColockPush_Lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/radiomore_Lin"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/timeColock_pushimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_timecolock_push" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="定时停止"
                    android:textColor="#e3e7eb"
                    android:textSize="8sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/timeColockPlay_Lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/timeColockPush_Lin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/timeColock_playimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radio_timecolock_play" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="定时播放"
                    android:textColor="#e3e7eb"
                    android:textSize="8sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/radio_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/play_Rel"
                android:layout_toLeftOf="@id/timeColockPlay_Lin"
                android:text=""
                android:textColor="#e3e7eb"
                android:textSize="14sp" />




        </RelativeLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radio_Rel"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:id="@+id/line_View"
            android:layout_width="2dp"
            android:layout_height="12dp"
            android:layout_marginRight="5dp"
            android:background="#F3DB23" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="精彩推荐"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>