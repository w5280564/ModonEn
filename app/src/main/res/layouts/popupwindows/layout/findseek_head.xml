<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/findfriend_Lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/phoneadress_Rel"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="50dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/phoneadress_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/find_phoneadress_icon" />

            <TextView
                android:id="@+id/phoneadress_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/phoneadress_img"
                android:text="邀请通讯录好友"
                android:textColor="#e3e7eb"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/phoneadress_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/right_arrow" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignLeft="@id/phoneadress_Txt"
                android:layout_alignParentBottom="true"
                android:background="#cfcfcf" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/friend_Rel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/friend_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/find_friend_icon" />

            <TextView
                android:id="@+id/friend_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/friend_img"
                android:text="邀请朋友圈好友"
                android:textColor="#e3e7eb"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/friend_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/right_arrow_black" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignLeft="@id/friend_Txt"
                android:layout_alignParentBottom="true"
                android:background="#343434" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/wechat_Rel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/wechat_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/find_wehat_icon" />

            <TextView
                android:id="@+id/wechat_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/wechat_img"
                android:text="邀请微信好友"
                android:textColor="#e3e7eb"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/wechat_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/right_arrow_black" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignLeft="@id/wechat_Txt"
                android:layout_alignParentBottom="true"
                android:background="#343434" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sina_Rel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/sina_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/find_sina_icon" />

            <TextView
                android:id="@+id/sina_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/sina_img"
                android:text="邀请微博好友"
                android:textColor="#e3e7eb"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/sina_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/right_arrow_black" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignLeft="@id/sina_Txt"
                android:layout_alignParentBottom="true"
                android:background="#343434" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/qq_Rel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/qq_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/find_qq_icon" />

            <TextView
                android:id="@+id/qq_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/qq_img"
                android:text="邀请qq好友"
                android:textColor="#e3e7eb"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/qq_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/right_arrow_black" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignLeft="@id/qq_Txt"
                android:layout_alignParentBottom="true"
                android:background="#343434" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/qzone_Rel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/qzone_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/find_qzone_icon" />

            <TextView
                android:id="@+id/qzone_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/qzone_img"
                android:text="邀请qq空间好友"
                android:textColor="#e3e7eb"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/qzone_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/right_arrow_black" />

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignLeft="@id/qzone_Txt"
                android:layout_alignParentBottom="true"
                android:background="#343434" />
        </RelativeLayout>
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/head_recy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipChildren="false"/>


</LinearLayout>