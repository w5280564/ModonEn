<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/badgePopup_Rel"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="@drawable/popupwhite_bg"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/badge_chaImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cha_icon"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/badge_Img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/badge_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/colorFristBlue"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@id/badge_Img"/>

        <TextView
            android:id="@+id/have_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/badge_Txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text=""
            android:textColor="@color/colorSecondYellow"
            android:textSize="10sp"
            android:textStyle="bold"/>


    </RelativeLayout>


</RelativeLayout>